{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<style type="text/css">
  .contact-page-container {
    padding: 0 16px 60px 16px; /* remove top padding; global body padding handles header offset */
    max-width: 100%;
    box-sizing: border-box;
  }

  /* Title styling - CONTACT (uppercase, black) */
  .contact-page-title {
    font-size: 12px !important;
    text-transform: uppercase !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    margin: 0 0 2rem 0 !important;
    line-height: 1.2 !important;
  }

  /* Subtitle styling - normal case, black */
  .contact-page-subtitle {
    font-size: 12px !important;
    text-transform: none !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    margin: 0 0 4rem 0 !important;
    line-height: 125% !important;
  }

  /* Form styling */
  .contact-form {
    width: 100%;
  }

  .contact-form .field {
    margin-bottom: 3rem;
    position: relative;
  }

  /* Kill Shopify's default field box wrappers inside this page */
  .contact-page-container .field:before,
  .contact-page-container .field:after,
  .contact-page-container .text-area:before,
  .contact-page-container .text-area:after,
  .contact-page-container .select:before,
  .contact-page-container .select:after {
    content: none !important;
    box-shadow: none !important;
    border: 0 !important;
  }

  /* NUCLEAR OPTION - Maximum specificity selectors */
  html body .contact-form input[type='text'],
  html body .contact-form input[type='email'],
  html body .contact-form textarea,
  .contact-form input,
  .contact-form textarea,
  form.contact-form input,
  form.contact-form textarea,
  div .contact-form input,
  div .contact-form textarea {
    width: 100% !important;
    background: transparent !important;
    background-color: transparent !important;
    background-image: none !important;
    border: 0 !important;
    border-style: none !important;
    border-width: 0 !important;
    border-top: 0 !important;
    border-left: 0 !important;
    border-right: 0 !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.5) !important;
    border-radius: 0 !important;
    padding: 0 0 8px 0 !important;
    margin: 0 !important;
    font-size: 12px !important;
    color: #000000 !important;
    font-family: inherit !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    outline: 0 !important;
    outline-style: none !important;
    outline-width: 0 !important;
    outline-offset: 0 !important;
    box-sizing: border-box !important;
    box-shadow: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    appearance: none !important;
    -webkit-border-radius: 0 !important;
    -moz-border-radius: 0 !important;
  }

  /* Placeholder styling - black 50% opacity */
  .contact-form input::placeholder,
  .contact-form textarea::placeholder {
    color: rgba(0, 0, 0, 0.5) !important;
    font-size: 12px !important;
    text-transform: uppercase !important;
    font-weight: normal;
    letter-spacing: 0.5px;
  }

  /* Textarea specific styling */
  .contact-form textarea {
    min-height: 120px;
    resize: vertical;
    line-height: 125%;
  }

  /* NUCLEAR FOCUS STATES - Maximum specificity */
  html body .contact-form input[type='text']:focus,
  html body .contact-form input[type='email']:focus,
  html body .contact-form textarea:focus,
  html body .contact-form input[type='text']:active,
  html body .contact-form input[type='email']:active,
  html body .contact-form textarea:active,
  html body .contact-form input[type='text']:hover,
  html body .contact-form input[type='email']:hover,
  html body .contact-form textarea:hover,
  .contact-form input:focus,
  .contact-form textarea:focus,
  .contact-form input:active,
  .contact-form textarea:active,
  .contact-form input:hover,
  .contact-form textarea:hover {
    border: 0 !important;
    border-style: none !important;
    border-width: 0 !important;
    border-top: 0 !important;
    border-left: 0 !important;
    border-right: 0 !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.5) !important;
    border-radius: 0 !important;
    outline: 0 !important;
    outline-style: none !important;
    outline-width: 0 !important;
    outline-offset: 0 !important;
    box-shadow: none !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow: none !important;
    background: transparent !important;
    background-color: transparent !important;
    background-image: none !important;
  }

  /* Submit button styling */
  .contact-form .contact-submit {
    background: transparent;
    border: none;
    padding: 0;
    font-size: 12px !important;
    text-transform: uppercase !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    cursor: pointer;
    margin-top: 10px; /* 10px below the last underline */
    border-bottom: none; /* no underline for button */
    padding-bottom: 0;
    display: inline-block;
  }

  .contact-form .contact-submit:hover {
    opacity: 0.7;
  }

  /* Desktop responsive */
  @media screen and (min-width: 1200px) {
    .contact-page-container {
      padding: 0 30px 60px 30px; /* remove top padding on desktop as well */
      max-width: 25vw; /* Same width as other pages */
    }
  }

  /* Error/success message styling */
  .contact-form .form-status {
    font-size: 12px !important;
    color: #000000 !important;
    margin-top: 2rem;
    letter-spacing: 0.5px;
  }
</style>

<div class="contact-page-container">
  <h1 class="contact-page-title">CONTACT</h1>
  <p class="contact-page-subtitle">Our support service will get back to you within 1-2 business days.</p>

  {% form 'contact', class: 'contact-form' %}
    {% if form.posted_successfully? %}
      <div class="form-status">Thank you for contacting us. We'll get back to you as soon as possible.</div>
    {% endif %}

    {% if form.errors %}
      <div class="form-status">Please fill out all required fields.</div>
    {% endif %}

    <div class="field">
      <input
        type="text"
        name="contact[first_name]"
        id="ContactForm-first-name"
        placeholder="FIRST NAME*"
        value="{{ form.first_name }}"
        required
      >
    </div>

    <div class="field">
      <input
        type="text"
        name="contact[last_name]"
        id="ContactForm-last-name"
        placeholder="LAST NAME*"
        value="{{ form.last_name }}"
        required
      >
    </div>

    <div class="field">
      <input
        type="email"
        name="contact[email]"
        id="ContactForm-email"
        placeholder="EMAIL*"
        value="{{ form.email }}"
        required
      >
    </div>

    <div class="field">
      <input
        type="text"
        name="contact[subject]"
        id="ContactForm-subject"
        placeholder="SUBJECT*"
        value="{{ form.subject }}"
        required
      >
    </div>

    <div class="field">
      <textarea
        name="contact[body]"
        id="ContactForm-body"
        placeholder="TYPE IN YOUR MESSAGE AND PRESS SEND MESSAGE"
        required
      >{{ form.body }}</textarea>
    </div>

    <button type="submit" class="contact-submit">SEND MESSAGE</button>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact Page Form",
  "class": "section",
  "settings": []
}
{% endschema %}
