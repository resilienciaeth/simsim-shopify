{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<style type="text/css">
  .contact-page-container {
    padding: 180px 16px 60px 16px; /* 180px top margin, 16px sides, 60px bottom */
    max-width: 100%;
    box-sizing: border-box;
  }
  
  /* Title styling - CONTACT (uppercase, black) */
  .contact-page-title {
    font-size: 12px !important;
    text-transform: uppercase !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    margin: 0 0 2rem 0 !important;
    line-height: 1.2 !important;
  }
  
  /* Subtitle styling - normal case, black */
  .contact-page-subtitle {
    font-size: 12px !important;
    text-transform: none !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    margin: 0 0 4rem 0 !important;
    line-height: 125% !important;
  }
  
  /* Form styling */
  .contact-form {
    width: 100%;
  }
  
  .contact-form .field {
    margin-bottom: 3rem;
    position: relative;
  }
  
  /* Input and textarea styling */
  .contact-form input,
  .contact-form textarea {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid #000000;
    padding: 0 0 8px 0;
    font-size: 12px !important;
    color: #000000 !important;
    font-family: inherit;
    font-weight: normal;
    letter-spacing: 0.5px;
    outline: none;
    box-sizing: border-box;
  }
  
  /* Placeholder styling - black 50% opacity */
  .contact-form input::placeholder,
  .contact-form textarea::placeholder {
    color: rgba(0, 0, 0, 0.5) !important;
    font-size: 12px !important;
    text-transform: uppercase !important;
    font-weight: normal;
    letter-spacing: 0.5px;
  }
  
  /* Textarea specific styling */
  .contact-form textarea {
    min-height: 120px;
    resize: vertical;
    line-height: 125%;
  }
  
  /* Remove default input styling */
  .contact-form input:focus,
  .contact-form textarea:focus {
    border-bottom-color: #000000;
    outline: none;
  }
  
  /* Submit button styling */
  .contact-form .contact-submit {
    background: transparent;
    border: none;
    padding: 0;
    font-size: 12px !important;
    text-transform: uppercase !important;
    color: #000000 !important;
    font-weight: normal !important;
    letter-spacing: 0.5px !important;
    cursor: pointer;
    margin-top: 2rem;
    border-bottom: 1px solid #000000;
    padding-bottom: 4px;
  }
  
  .contact-form .contact-submit:hover {
    opacity: 0.7;
  }
  
  /* Desktop responsive */
  @media screen and (min-width: 1200px) {
    .contact-page-container {
      padding: 300px 30px 60px 30px; /* 300px top margin, 30px sides on desktop */
      max-width: 25vw; /* Same width as other pages */
    }
  }
  
  /* Error/success message styling */
  .contact-form .form-status {
    font-size: 12px !important;
    color: #000000 !important;
    margin-top: 2rem;
    letter-spacing: 0.5px;
  }
</style>

<div class="contact-page-container">
  <h1 class="contact-page-title">CONTACT</h1>
  <p class="contact-page-subtitle">Our support service will get back to you within 1-2 business days.</p>
  
  {% form 'contact', class: 'contact-form' %}
    {% if form.posted_successfully? %}
      <div class="form-status">
        Thank you for contacting us. We'll get back to you as soon as possible.
      </div>
    {% endif %}
    
    {% if form.errors %}
      <div class="form-status">
        Please fill out all required fields.
      </div>
    {% endif %}
    
    <div class="field">
      <input 
        type="text" 
        name="contact[first_name]" 
        id="ContactForm-first-name"
        placeholder="FIRST NAME*"
        value="{{ form.first_name }}"
        required
      >
    </div>
    
    <div class="field">
      <input 
        type="text" 
        name="contact[last_name]" 
        id="ContactForm-last-name"
        placeholder="LAST NAME*"
        value="{{ form.last_name }}"
        required
      >
    </div>
    
    <div class="field">
      <input 
        type="email" 
        name="contact[email]" 
        id="ContactForm-email"
        placeholder="EMAIL*"
        value="{{ form.email }}"
        required
      >
    </div>
    
    <div class="field">
      <input 
        type="text" 
        name="contact[subject]" 
        id="ContactForm-subject"
        placeholder="SUBJECT*"
        value="{{ form.subject }}"
        required
      >
    </div>
    
    <div class="field">
      <textarea 
        name="contact[body]" 
        id="ContactForm-body"
        placeholder="TYPE IN YOUR MESSAGE AND PRESS SEND MESSAGE"
        required
      >{{ form.body }}</textarea>
    </div>
    
    <button type="submit" class="contact-submit">
      SEND MESSAGE
    </button>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact Page Form",
  "class": "section",
  "settings": []
}
{% endschema %}
