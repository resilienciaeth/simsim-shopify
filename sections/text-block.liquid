{{ 'text-block.css' | asset_url | stylesheet_tag }}

<style>
  .text-block-section {
    width: 100%;
    padding: 180px 30px 0 30px;
    margin: 0;
  }

  .text-block-content {
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .text-block-text {
    font-size: 48px;
    line-height: 1.3;
    margin: 0;
    color: rgb(var(--color-foreground));
    font-weight: 700;
    letter-spacing: normal;
    text-transform: uppercase;
    font-family: 'NewEdge666-Rounded', Arial, sans-serif;
  }

  @media screen and (max-width: 749px) {
    .text-block-section {
      padding: 90px 20px 0 20px;
    }

    .text-block-text {
      font-size: 32px;
      line-height: 1.3;
    }
  }
</style>

<div class="text-block-section section" id="section-{{ section.id }}">
  <div class="text-block-content">
    {%- if section.settings.text != blank -%}
      <p class="text-block-text">{{ section.settings.text }}</p>
    {%- else -%}
      <p class="text-block-text">Add your text in the theme editor</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Text Block",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "This is more than a bag; it's a celebration of identity, culture, and the beauty of being distinct."
    }
  ],
  "presets": [
    {
      "name": "Text Block",
      "category": "Text"
    }
  ]
}
{% endschema %}
