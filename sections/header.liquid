    <nav class="custom-navbar">
      <!-- Left Navigation -->
      <div class="navbar-left">
        <a href="#" class="navbar-link navbar-menu" data-unified-menu-toggle>MENU</a>
        <a href="{{ routes.collections_url }}" class="navbar-link nav-hide-mobile">
          <span class="navbar-text">SHOP</span>
        </a>
        <a href="{{ routes.pages_url }}/explore" class="navbar-link nav-hide-mobile">
          <span class="navbar-text">EXPLORE</span>
        </a>
        <a href="{{ routes.pages_url }}/brand" class="navbar-link nav-hide-mobile">
          <span class="navbar-text">BRAND</span>
        </a>
      </div>

      <!-- Center Logo -->
      <div class="navbar-center">
        <a href="{{ routes.root_url }}" class="navbar-logo">
          {%- assign logo_alt = shop.name | escape -%}
          {%- assign dark_logo_url = 'https://cdn.shopify.com/s/files/1/0911/2394/1654/files/logo_2.png?v=1756148711' -%}
          {%- assign light_logo_url = 'https://cdn.shopify.com/s/files/1/0911/2394/1654/files/Group_343.png?v=1756148728' -%}
          <img
            src="{%- if section.settings.nav_variant == 'light' -%}{{ light_logo_url }}{%- else -%}{{ dark_logo_url }}{%- endif -%}"
            alt="{{ logo_alt }}"
            class="navbar-logo-image"
            width="120"
            height="32"
            style="height: 32px; width: auto;"
          >
        </a>
      </div>

      <!-- Right Navigation -->
      <div class="navbar-right">
        <a href="{{ routes.search_url }}" class="navbar-link nav-hide-mobile">SEARCH</a>

        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="navbar-link nav-hide-mobile"
            >ACCOUNT</a
