<style>
  .blogs-gallery {
    padding: 0 16px;
  }

  .blogs-gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    margin-top: 30px;
  }

  .blogs-gallery-item {
    position: relative;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
  }

  .blogs-gallery-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .blogs-gallery-content {
    padding: 20px 0;
  }

  .blogs-gallery-title {
    font-size: 1.2rem;
    margin: 0 0 10px;
    font-weight: normal;
  }

  .blogs-gallery-date {
    font-size: 0.9rem;
    opacity: 0.5;
    margin-bottom: 10px;
  }

  .blogs-gallery-excerpt {
    font-size: 0.9rem;
    line-height: 1.4;
    opacity: 0.7;
  }

  @media screen and (min-width: 750px) {
    .blogs-gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      margin-top: 40px;
    }
  }

  @media screen and (min-width: 990px) {
    .blogs-gallery {
      padding: 0 40px;
    }

    .blogs-gallery-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 50px;
      margin-top: 50px;
    }
  }
</style>

<div class="blogs-gallery">
  <div class="hello-world-test" style="padding: 16px; text-transform: uppercase;">HELLO WORLD</div>
  <div class="blogs-gallery-grid">
    {%- for blog in blogs -%}
      {%- if blog.articles.size > 0 -%}
        {%- assign latest_article = blog.articles.first -%}
        <a href="{{ blog.url }}" class="blogs-gallery-item">
          {%- if latest_article.image -%}
            <img
              srcset="
                {%- if latest_article.image.width >= 375 -%}{{ latest_article.image | image_url: width: 375 }} 375w,{%- endif -%}
                {%- if latest_article.image.width >= 750 -%}{{ latest_article.image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if latest_article.image.width >= 1100 -%}{{ latest_article.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                {%- if latest_article.image.width >= 1500 -%}{{ latest_article.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                {{ latest_article.image | image_url }} {{ latest_article.image.width }}w
              "
              src="{{ latest_article.image | image_url: width: 750 }}"
              sizes="(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw"
              alt="{{ latest_article.image.alt | escape }}"
              class="blogs-gallery-image"
              loading="lazy"
              width="{{ latest_article.image.width }}"
              height="{{ latest_article.image.height }}"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'blogs-gallery-image placeholder' }}
          {%- endif -%}

          <div class="blogs-gallery-content">
            <h2 class="blogs-gallery-title">{{ blog.title }}</h2>
            <div class="blogs-gallery-date">{{ latest_article.published_at | time_tag: format: 'date' }}</div>
            <div class="blogs-gallery-excerpt">
              {%- if latest_article.excerpt.size > 0 -%}
                {{ latest_article.excerpt | strip_html | truncatewords: 30 }}
              {%- else -%}
                {{ latest_article.content | strip_html | truncatewords: 30 }}
              {%- endif -%}
            </div>
          </div>
        </a>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
