<style>
  .reusable-footer {
    background-color: #4e8926; /* match cart background */
    color: #000; /* per nav-variant dark text */
    padding-top: 180px; /* mobile default */
    padding-bottom: 10px;
    position: relative;
  }

  .reusable-footer .footer-mobile-image {
    position: absolute;
    top: 60px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .reusable-footer .footer-mobile-image img {
    width: 81px;
    height: 38px;
    display: block;
  }

  .reusable-footer .footer-inner {
    width: 100%;
    box-sizing: border-box;
    padding-left: 1.6rem; /* 16px sides mobile */
    padding-right: 1.6rem;
  }

  .reusable-footer .footer-group {
    display: flex;
    flex-direction: column;
    gap: 12px; /* 12px padding between groups on mobile */
  }

  .reusable-footer .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0px; /* 0px between links within each group */
  }

  .reusable-footer a {
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.5px;
  }

  .reusable-footer .footer-bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .reusable-footer .footer-copyright {
    color: #000;
    font-size: 12px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .reusable-footer .social-credit-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    width: 100%;
  }

  .reusable-footer .social-links {
    display: flex;
    flex-direction: column;
    gap: 0px;
  }

  .reusable-footer .footer-credits {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0px;
  }

  .reusable-footer .credit-toggle {
    background: none;
    border: none;
    color: #000;
    font-size: 12px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    padding: 0;
    margin: 0;
    cursor: pointer;
    text-align: right;
  }

  .reusable-footer .credit-details {
    margin-top: 5px;
    text-align: right;
  }

  .reusable-footer .credit-line {
    color: #000;
    font-size: 12px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    margin: 0;
  }

  .reusable-footer .footer-logo {
    display: none; /* hide on mobile */
  }

  .reusable-footer .footer-desktop-right {
    display: none; /* hide on mobile */
  }

  .reusable-footer .footer-copyright-desktop {
    display: none; /* hide desktop copyright on mobile */
  }

  @media screen and (min-width: 1200px) {
    .reusable-footer {
      padding-top: 120px; /* desktop */
      padding-bottom: 10px; /* desktop */
    }

    .reusable-footer .footer-inner {
      padding-left: 3rem; /* 30px sides desktop */
      padding-right: 3rem;
    }

    .reusable-footer .footer-group {
      flex-direction: column;
      gap: 30px; /* 30px between groups on desktop */
    }

    .reusable-footer .footer-mobile-image {
      display: none; /* hide on desktop */
    }

    .reusable-footer .footer-links {
      gap: 0px; /* 0px between links on desktop */
    }

    .reusable-footer .social-links {
      gap: 0px; /* 0px between social links on desktop */
    }

    .reusable-footer .footer-bottom-row {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      gap: 30px;
    }

    .reusable-footer .footer-bottom-row .footer-links {
      justify-self: start;
    }

    .reusable-footer .footer-logo {
      justify-self: center;
      display: block;
    }

    .reusable-footer .footer-desktop-right {
      justify-self: end;
      display: flex;
      gap: 60px;
      align-items: flex-end;
      width: 100%;
      max-width: 400px;
    }

    .reusable-footer .footer-credits-desktop {
      position: relative;
      flex: 1;
    }

    .reusable-footer .footer-credits-desktop .credit-toggle {
      background: none;
      border: none;
      color: #000;
      font-size: 12px;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      padding: 0;
      margin: 0;
      cursor: pointer;
      text-align: left;
    }

    .reusable-footer .footer-credits-desktop .credit-details {
      position: absolute;
      bottom: 100%;
      left: 0;
      text-align: left;
      margin-bottom: 5px;
      white-space: nowrap;
    }

    .reusable-footer .footer-copyright {
      align-self: flex-end;
      flex-shrink: 0;
    }

    .reusable-footer .footer-copyright-mobile {
      display: none; /* hide mobile copyright on desktop */
    }

    .reusable-footer .social-credit-row .footer-credits {
      display: none; /* hide mobile credit section on desktop */
    }
  }
</style>

<footer class="reusable-footer">
  <div class="footer-mobile-image">
    <img
      src="https://cdn.shopify.com/s/files/1/0911/2394/1654/files/logo_footer.svg?v=1760021817"
      alt="{{ shop.name }}"
    >
  </div>
  <div class="footer-inner">
    <!-- All links in single column layout -->
    <div class="footer-group">
      <nav class="footer-links">
        <a href="/pages/about">ABOUT</a>
        <a href="/pages/contact">CONTACT</a>
      </nav>

      <nav class="footer-links">
        <a href="/pages/privacy-policy">PRIVACY POLICY</a>
        <a href="/pages/shipping-and-returns">SHIPPING & RETURNS</a>
        <a href="/pages/terms-and-conditions">TERMS</a>
      </nav>

      <nav class="footer-links">
        <div class="social-credit-row">
          <div class="social-links"></div>
          <div class="footer-credits">
            <div class="credit-details" id="creditDetails" style="display: none;">
              <div class="credit-line">DESIGN AND AD: SPECS47</div>
              <div class="credit-line">DEVELOPMENT: RESILIENCIASTUDIO</div>
            </div>
            <button class="credit-toggle" onclick="toggleCredits()">CREDIT</button>
          </div>
        </div>
      </nav>

      <div class="footer-bottom-row">
        <nav class="footer-links">
          <a href="https://www.instagram.com/simsim.shop" target="_blank">INSTAGRAM</a>
        </nav>
        <div class="footer-copyright footer-copyright-mobile">© 2025 SIMSIM. ALL RIGHTS RESERVED.</div>
        <div class="footer-logo">
          <img
            src="https://cdn.shopify.com/s/files/1/0911/2394/1654/files/logo_footer.svg?v=1760021817"
            alt="{{ shop.name }}"
          >
        </div>
        <div class="footer-desktop-right">
          <div class="footer-credits-desktop">
            <div class="credit-details" id="creditDetailsDesktop" style="display: none;">
              <div class="credit-line">DESIGN AND AD: SPECS47</div>
              <div class="credit-line">DEVELOPMENT: RESILIENCIASTUDIO</div>
            </div>
            <button class="credit-toggle" onclick="toggleCreditsDesktop()">CREDIT</button>
          </div>
          <div class="footer-copyright">© 2025 SIMSIM. ALL RIGHTS RESERVED.</div>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  function toggleCredits() {
    const toggle = document.querySelector('.credit-toggle');
    const details = document.getElementById('creditDetails');

    if (details.style.display === 'none') {
      details.style.display = 'block';
      toggle.textContent = 'CLOSE';
    } else {
      details.style.display = 'none';
      toggle.textContent = 'CREDIT';
    }
  }

  function toggleCreditsDesktop() {
    const toggle = document.querySelector('.footer-desktop-right .credit-toggle');
    const details = document.getElementById('creditDetailsDesktop');

    if (details.style.display === 'none') {
      details.style.display = 'block';
      toggle.textContent = 'CLOSE';
    } else {
      details.style.display = 'none';
      toggle.textContent = 'CREDIT';
    }
  }
</script>

