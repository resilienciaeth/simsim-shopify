<style>
  .header-wrapper {
    width: 100%;
    border-bottom: none; /* remove bottom bar */
    background: transparent; /* remove background bar */
  }

  .custom-header {
    width: 100%;
  }

  .custom-navbar {
    display: grid; /* true three-column layout */
    grid-template-columns: 1fr auto 1fr; /* left | logo | right */
    align-items: center;
    padding: 2rem 1.6rem; /* vertical 2rem, horizontal mobile 16px */
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
    width: 100%;
    min-height: 60px;
    color: inherit;
  }

  .navbar-left,
  .navbar-right {
    display: flex;
    gap: 1.6rem; /* 16px base gap */
    min-width: 0; /* Prevent overflow */
  }

  .navbar-left {
    justify-self: start;
    justify-content: flex-start;
  }
  .navbar-right {
    justify-self: end;
    justify-content: flex-end;
  }

  .navbar-center {
    display: flex;
    align-items: center;
    justify-self: center; /* sits in the middle column */
  }

  .navbar-link {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  @media screen and (min-width: 1200px) {
    .navbar-link:hover {
      opacity: 0.5;
    }
  }

  .navbar-logo {
    font-size: 18px;
    font-weight: bold;
    text-decoration: none;
    color: inherit;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .navbar-logo-image {
    max-height: 40px;
    width: auto;
  }

  /* no icons - text only */

  .cart-count-bubble {
    background: #000;
    color: #fff;
    border-radius: 50%;
    font-size: 10px;
    padding: 2px 6px;
    margin-left: 4px;
    min-width: 16px;
    text-align: center;
    line-height: 1;
  }

  /* Mobile responsive */
  @media screen and (max-width: 1199px) {
    .navbar-left,
    .navbar-right {
      gap: 1.5rem;
    }

    .custom-navbar {
      font-size: 11px;
      padding: 1.5rem 1.6rem; /* keep 16px sides on mobile */
    }

    .navbar-logo {
      font-size: 16px;
    }

    .navbar-logo-image {
      max-height: 32px;
    }
  }

  @media screen and (min-width: 1200px) {
    .custom-navbar {
      padding-left: 3rem; /* 30px desktop sides */
      padding-right: 3rem;
    }

    .navbar-left,
    .navbar-right {
      gap: 3rem; /* 30px desktop spacing between items */
    }
  }

  /* Variant styles */
  .nav-variant--dark .custom-navbar,
  .nav-variant--dark .navbar-link {
    color: #000;
  }
  .nav-variant--light .custom-navbar,
  .nav-variant--light .navbar-link {
    color: #fff;
  }

  /* Mobile menu visibility rules */
  .navbar-menu {
    display: none;
  }

  @media screen and (max-width: 1199px) {
    .navbar-left .navbar-link:not(.navbar-menu) {
      display: none;
    }
    .navbar-menu {
      display: inline-flex;
    }
    .nav-hide-mobile {
      display: none !important;
    }
  }

  /* Unified Mobile Menu System */
  @media screen and (max-width: 1199px) {
    .unified-menu-drawer {
      position: fixed;
      top: 0;
      left: 0;
      width: 70vw;
      height: 100vh;
      background: #4e8926;
      color: #fff;
      padding: 2rem 1.6rem;
      transform: translateX(-100%);
      transition: transform 300ms ease;
      z-index: 9999;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .unified-menu-drawer nav {
      display: flex;
      flex-direction: column;
      gap: 1.6rem;
    }

    .unified-menu-drawer .navbar-link {
      color: #fff;
      text-decoration: none;
      font-size: 1.4rem;
      padding: 0.5rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .unified-menu-drawer .navbar-link:hover {
      opacity: 0.8;
    }

    /* Menu open state */
    body.unified-menu-open {
      overflow: hidden;
    }

    body.unified-menu-open .unified-menu-drawer {
      transform: translateX(0);
    }

    /* Push content and header content (but not the drawer) when menu is open */
    body.unified-menu-open #MainContent,
    body.unified-menu-open main,
    body.unified-menu-open .content-for-layout,
    body.unified-menu-open .custom-header {
      transform: translateX(70vw) !important;
      transition: transform 300ms ease !important;
    }
  }

  /* Hide text on very small screens, show icons only */
  @media screen and (max-width: 768px) {
    .navbar-text {
      display: none;
    }

    .navbar-left,
    .navbar-right {
      gap: 1rem;
    }

    .custom-navbar {
      padding: 1rem 1.6rem; /* ensure 16px side padding on small mobile */
    }

    .navbar-logo {
      font-size: 14px;
    }

    .navbar-logo-image {
      max-height: 28px;
    }
  }
</style>

<header class="header-wrapper color-{{ section.settings.color_scheme }} gradient nav-variant--{{ section.settings.nav_variant }}">
