</div>

<script>
  (function () {
    const CONVERTKIT_FORM_ID = '7753448';
    const CONVERTKIT_API_KEY = 'hrlHwRPE65AwRJj2dWxPLw';
    const POPUP_DELAY = 5000; // 5 seconds

    // Check if we're on the homepage
    const isHomepage = window.location.pathname === '/' || window.location.pathname === '';

    if (!isHomepage) {
      return; // Exit if not on homepage
    }

    // Cookie logic temporarily removed for testing

    const popup = document.getElementById('email-popup');
    const closeBtn = document.getElementById('popup-close');
    const form = document.getElementById('popup-form');
    const emailInput = document.getElementById('popup-email-input');
    const messageDiv = document.getElementById('popup-message');

    // Show popup after delay
    setTimeout(() => {
      popup.classList.add('active');
      document.body.style.overflow = 'hidden'; // Prevent scrolling
    }, POPUP_DELAY);

    // Close popup function
    function closePopup() {
      popup.classList.remove('active');
      document.body.style.overflow = ''; // Restore scrolling
      // Cookie setting temporarily removed for testing
    }

    // Close button click
    closeBtn.addEventListener('click', closePopup);

    // Close on overlay click
    popup.addEventListener('click', (e) => {
      if (e.target === popup) {
        closePopup();
      }
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && popup.classList.contains('active')) {
        closePopup();
      }
    });

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = emailInput.value;
      const submitButton = form.querySelector('.email-popup-submit');

      // Disable button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Signing Up...';
      messageDiv.textContent = '';
      messageDiv.className = 'email-popup-message';

      try {
        const response = await fetch(`https://api.convertkit.com/v3/forms/${CONVERTKIT_FORM_ID}/subscribe`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            api_key: CONVERTKIT_API_KEY,
            email: email,
          }),
        });

        const data = await response.json();

        if (response.ok) {
          messageDiv.textContent = 'Thanks for subscribing!';
          messageDiv.className = 'email-popup-message success';
          emailInput.value = '';

          // Close popup after successful subscription
          setTimeout(() => {
            closePopup();
          }, 2000);
        } else {
          throw new Error(data.message || 'Something went wrong');
        }
      } catch (error) {
        messageDiv.textContent = error.message || 'An error occurred. Please try again.';
        messageDiv.className = 'email-popup-message error';
      } finally {
        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = 'Sign Up';
      }
    });
  })();
</script>
