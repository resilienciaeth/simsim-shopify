<style>
  .email-popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .email-popup-overlay.active {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .email-popup-container {
    position: relative;
    display: flex;
    flex-direction: row;
    max-width: 900px;
    width: 90%;
    height: 600px;
    max-height: 90vh;
    background-color: white;
    border-radius: 0;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .email-popup-overlay.active .email-popup-container {
    transform: scale(1);
  }

  .email-popup-close {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 32px;
    height: 32px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    line-height: 1;
    color: #333;
    transition: background-color 0.3s ease;
  }

  .email-popup-close:hover {
    background-color: white;
  }

  .email-popup-image {
    flex: 0 0 50%;
    width: 50%;
    height: 100%;
    overflow: hidden;
  }

  .email-popup-content {
    flex: 0 0 50%;
    width: 50%;
    height: 100%;
    padding: 60px 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #4e8926;
    color: white;
  }

  .email-popup-title {
    font-size: 32px;
    line-height: 1.3;
    margin: 0 0 20px 0;
    color: white;
    font-weight: 700;
    letter-spacing: normal;
    text-transform: uppercase;
  }

  /* Force NewEdge666-Rounded with higher specificity */
  .email-popup-content .email-popup-title {
    font-family: 'NewEdge666-Rounded', Arial, sans-serif !important;
  }

  .email-popup-description {
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 30px 0;
    color: white;
    font-weight: 400;
  }

  .email-popup-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .email-popup-input {
    width: 100%;
    padding: 15px 20px;
    font-size: 14px;
    border: none;
    border-radius: 50px;
    background: white;
    color: #333;
    outline: none;
  }

  .email-popup-input::placeholder {
    color: rgba(0, 0, 0, 0.5);
  }

  .email-popup-submit {
    width: 100%;
    padding: 15px 20px;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    border: none;
    border-radius: 50px;
    background: white;
    color: #333;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .email-popup-submit:hover {
    opacity: 0.8;
  }

  .email-popup-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .email-popup-message {
    margin-top: 10px;
    font-size: 13px;
    text-align: center;
  }

  .email-popup-message.success {
    color: #a8d5a8;
  }

  .email-popup-message.error {
    color: #ffb3b3;
  }

  /* Mobile styles */
  @media screen and (max-width: 749px) {
    .email-popup-container {
      flex-direction: column;
      width: 95%;
      height: auto;
      max-height: 90vh;
    }

    .email-popup-image {
      width: 100%;
      height: 250px;
      min-height: 250px;
      flex: none;
    }

    .email-popup-content {
      width: 100%;
      height: auto;
      flex: none;
      padding: 40px 30px;
    }

    .email-popup-title {
      font-size: 24px;
      line-height: 1.3;
      margin-bottom: 15px;
    }

    .email-popup-description {
      font-size: 13px;
      margin-bottom: 25px;
    }

    .email-popup-input,
    .email-popup-submit {
      padding: 12px 18px;
      font-size: 13px;
    }
  }
</style>

<div class="email-popup-overlay" id="email-popup">
  <div class="email-popup-container">
    <button class="email-popup-close" id="popup-close" aria-label="Close popup">Ã—</button>

    <div class="email-popup-image">
      <img
        src="https://cdn.shopify.com/s/files/1/0911/2394/1654/files/Screenshot_2025-10-10_at_10.39.19.png?v=1760110767"
        alt="SIMSIM Love Letters"
        style="width: 100%; height: 100%; object-fit: cover;"
      >
    </div>

    <div class="email-popup-content">
      <h2 class="email-popup-title">From SIMSIM,<br> With Love</h2>
      <p class="email-popup-description">
        Enjoy 10% off your first order and exclusive early access to new drops and special releases.
      </p>

      <form class="email-popup-form" id="popup-form">
        <input
          type="email"
          name="email"
          class="email-popup-input"
          placeholder="Enter Email"
          required
          aria-label="Email address"
          id="popup-email-input"
        >
        <button type="submit" class="email-popup-submit">Sign Up</button>
        <div class="email-popup-message" id="popup-message"></div>
      </form>
    </div>
